 <div class="container py-3 ">
  <div class="modal-card-smaller p-3">
    <div>
      <h2 class="mx-3 my-3"> Review <%= @booking.treatment.name %></h2>
      <%= cl_image_tag(@booking.treatment.photos.first&.attachment&.url || "default-thumb_qpqfou.png") %>
      <div>
        <%= simple_form_for [@booking, @review] do |f| %>
        <%= f.input :stars, collection: (1..5).to_a, label: "Rate your experience" %>
        <%= f.input :description %>
        <%= f.submit "Review", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
