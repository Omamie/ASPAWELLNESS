<div class="container py-3">
  <div class="modal-card-booking p-3">
    <h2 class="mx-2 my-3 pl-1" style="font-weight: bold;">Confirm your booking </h2>
    <%= simple_form_for [@treatment, @booking], method: :post do |f| %>
    <div class="container mb-3">
      <label for="firstname" style="margin-top: 10px">First name</label><br>
      <input type="text" name="firstname" value="<%=current_user.first_name%>" class="booking-form"><br>
      <label for="lastname">Last name</label><br>
      <input type="text" style="margin-bottom:20px"; name="lastname" class="booking-form" value="<%=current_user.last_name%>">
      <%= f.input :phone_number, as: :string, required: false %>
    </div>
    <div class="container mb-2">
      <%= f.input :start_time, as: :string, required: false, input_html: {autocomplete: "Select a date", class: "datepicker"} %>
    </div>
    <div style="display: flex; align-items: center;">
    <%= f.submit "Confirm", class: "btn btn-flat-booking"%>
    <%= f.error_notification %>
    </div>
    <% end %>
  </div>
</div>
