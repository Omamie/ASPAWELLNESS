<div class="container py-3 ">
  <div class="modal-card p-3">
    <h2 class="mx-2 my-3">Confirm Your Booking </h2>
    <%= simple_form_for [@center, @treatment, @booking] do |f| %>
      <%= f.input :start_time, as: :string, required: false, input_html: {autocomplete: "Select a date", class: "datepicker"} %>
      <%= f.submit "Confirm", class: "btn btn-primary" %>
      <%= f.error_notification %>
    <% end %>
  </div>
</div>
