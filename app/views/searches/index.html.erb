<div class="d-flex p-2 bd-highlight">
  <div class="card-container">
    <% @centers.each do |center| %>
    <div class="treatment-centre-card-product row">
      <div class="card-index col-8" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dbgxzafez/image/upload/v1575303401/Almablu-Wellness-Spa_oapmrf.jpg);">
        <div class="treatment-centre-card-product-infos">
          <div class="treatment-centre-card-product-infos-text">

          </div>
        </div>
      </div>
      <div class="centre-card-details col-4">
        <div class="centre-card-price">
          <p><%= center.name.capitalize %></p>
        </div>
      </div>
    <div class="card-info-index col-12">
      <p><%= center.name.upcase %></p>
      <p><%= center.address.capitalize %></p>
    </div>
    </div>
    <% end %>
  </div>
  <div
  id="map"
  style="width: 40%;
  height: 667px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
</div>
