<div class="container py-3 ">
  <div class="modal-card-smaller p-3">
    <div>
      <h1 class="mx-3 my-3"> Register your center </h1>
      <div>
        <%= simple_form_for [@center, @treatment] do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price_cents %>
        <%= f.input :category %>
        <%= f.input :photo %>
        <%= f.input :capacity_per_hour %>
        <%= f.input :duration %>
        <%= f.submit "Add new Treatment", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
