<div style="margin-top: 20px;">
  <h1 style="color:#3D8C90; text-align: center;">Choose your treatment from the list below</h1>
</div>
<div class="d-flex p-2 bd-highlight" style="max-width: fit-content; margin:0 auto;">
  <div class="card-container">
    <% @treatments.each do |t| %>
    <div class="treatment-card">
      <div class="card-image" style='background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4))'>
        <%= cl_image_tag(t.photos.first&.attachment&.url, class: "treatment-img img-fluid")%>
      </div>
      <div class="card-info">
        <div class="card-info-text">
          <h2 class="card-treatment-name"><%= link_to t.name, center_path(t.center.id)%></h2>
          <p class="card-center-name"><%=t.center.name%></p>
          <p class="card-treatment-adress"><%=t.center.address %></p>
          <p class="card-treatment-review"><%#= t.center.reviews %></p>
        </div>
        <div class="card-price">
          <h2><%=t.price%></h2>
          <%= link_to "Show More", center_path(t.center.id), class:"btn btn-flat" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
