<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-trasparent">
  <%= link_to (image_tag("circle-cropped.png")), root_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if  user_signed_in? && current_user.owner?  %>
      <%= link_to "My Profile", center_path(@my_center), class: "nav-link white-link font-weight-light " %>
      <% end %>
      <% if user_signed_in? && current_user.customer? %>
      <li class="nav-item navbar-lewagon white-link">
        <%= link_to "My Bookings", bookings_path, class: "nav-link white-link font-weight-light " %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "customeravatar.png", size:"38x38",class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if policy(Center).create? %>
          <%= link_to "Register Your Centre", new_center_path, class: "dropdown-item font-weight-light" %>
          <% end %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item font-weight-light" %>
        </div>
      </li>
      <% elsif user_signed_in? && current_user.owner? %>
      <li class="nav-item navbar-lewagon nav-item-text" style="background:none; ">
        <%= link_to "Calendar", bookings_path, class: "nav-link white-link font-weight-light" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "centerprofileavatar.png", size:"38x38",class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Register Your Centre", new_center_path, class: "dropdown-item font-weight-light" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item font-weight-light" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Register Your Centre", new_center_path, class: "nav-link white-link font-weight-light" %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign up", new_user_registration_path, class: "nav-link white-link font-weight-light" %>
      </li>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link white-link font-weight-light" %>
      </li>
      <li class="nav-item dropdown">
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item font-weight-light" %>
        </div>
      </li>
      <% end %>
    </ul>
